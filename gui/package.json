{
  "name": "instawow-desktop",
  "version": "0.8.2",
  "description": "GUI for the World of Warcraft add-on manager instawow",
  "main": "build",
  "scripts": {
    "build": "rollup -c",
    "start": "concurrently \"rollup -c -w\" \"electron .\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "layday <layday@protonmail.com>",
  "license": "GPL-3.0-or-later",
  "private": true,
  "devDependencies": {
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/lodash": "^4.14.168",
    "@types/luxon": "^1.26.0",
    "concurrently": "^6.0.0",
    "electron": "^11.3.0",
    "electron-builder": "^22.9.1",
    "events": "^3.2.0",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.6",
    "rollup": "^2.39.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "sass": "^1.32.8",
    "svelte": "^3.32.3",
    "svelte-check": "^1.1.35",
    "svelte-preprocess": "^4.6.9",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@open-rpc/client-js": "^1.6.2",
    "electron-context-menu": "^2.4.0",
    "lodash": "^4.17.21",
    "luxon": "^1.26.0",
    "semaphore-async-await": "^1.5.1"
  },
  "build": {
    "appId": "org.instawow.instawow-desktop",
    "directories": {
      "buildResources": "./artefacts/"
    },
    "files": [
      "./build/**/*"
    ],
    "linux": {
      "target": "appimage",
      "extraResources": [
        {
          "from": "./artefacts/instawow",
          "to": "./instawow"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "extraFiles": [
        {
          "from": "./artefacts/instawow",
          "to": "./MacOS/instawow"
        }
      ]
    },
    "win": {
      "target": "portable",
      "extraResources": [
        {
          "from": "./artefacts/instawow.exe",
          "to": "./instawow.exe"
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 99
  }
}
